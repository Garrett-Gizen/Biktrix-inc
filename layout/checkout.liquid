    font-family: "Poppins";
    font-weight: 700;
    text-transform: uppercase;
    margin-bottom: 0;
    padding: 0;
    padding-bottom: 15px;
    position: relative;
    color: #222021;
    width: fit-content;
}

.section__header{
    margin-bottom:30px;
}

