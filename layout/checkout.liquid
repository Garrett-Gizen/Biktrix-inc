.layout-flex--loose-horizontal {
    margin-left: 0;
    margin-right: 0;
}

.floating-labels .main .field__label, .floating-labels .sidebar .field__label{
    color:#A4A4A4;
}

.main .field__input, .sidebar .field__input{
    background-color:white;
    border-color:#E8E8E8;
