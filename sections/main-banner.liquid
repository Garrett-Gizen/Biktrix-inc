{%- if section.settings.image != blank -%}
    <section class="{{ section.id }} main-banner" style="background-image:url('{{ section.settings.image | img_url: 'master' }}')"​​​​​​​>
        {% else %}
    <section class="{{ section.id }} main-banner" style="background-image:url('{{ 'image_bg.jpg' | asset_url }}')"​​​​​​​>
{%- endif -%}

  <div class="container">
    <div class="content light">
      {% if template == 'index' %}
        <h1 class="primary"> {{ section.settings.title | escape }} </h1>
         {% else %}
          <h1 class="primary"> {{ section.settings.title | escape  }} </h1>
      {% endif %}
      
      <p> {{ section.settings.text | escape }} </p>
      {% if section.settings.button_choice %}
         <a href="{{ section.settings.link }}" class="btn prim-dark">{{ section.settings.button_text | escape }}</a>
      {% endif %}
     
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "Top Banner",
    "settings": [
      {
        "id": "title",
        "type": "text",
        "label": "Title",
        "default": "Place Title Here"
      },
      {
        "id": "text",
        "type": "text",
        "label": "Description",
        "default": "Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown."
      },
            {
          "type": "header",
          "content": "Button"
        },

    {
        "type": "checkbox",
        "id": "button_choice",
        "label": "Want A Button?",
        "default": true
      },

       {
          "type": "text",
          "id": "button_text",
          "label": "Text",
          "default": "Read More"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        },
                    {
          "type": "header",
          "content": "Background Image"
        },
            {

          "type": "image_picker",
          "id": "image",
          "label": "Select Image"
    }
  ],
    "presets": [
    {
      "category": "Main",
      "name": "Main Banner",
      "settings": {}
    }
  ]
  }
{% endschema %}


<style>        
.main-banner {
	width:100%;
	height: 675px;
	background-repeat: no-repeat;
  background-size: cover;
  position:relative;
  display: flex;
  align-items: center;
  flex-direction: row;
  background-position-y: center;
}

.main-banner::after{
    content: "";
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    background-color: rgb(0 0 0 / 0.6);
    z-index: 0;
}

.main-banner .content{
  width:41.666%;
  word-break: break-word;
}



@media screen and (max-width: 999px) {
  .main-banner .content{
    width:100%;
  }
}

@media screen and (max-width: 640px) {
  .main-banner{
    height:auto;
    padding:20% 0;
    background-position-x: center;

  }
  .main-banner .content p, .main-banner .content h1,{
    line-height:40px;
  }
}
</style>