<section class="section" data-section-id="{{ section.id }}" data-section-type="{{ section.id }}" style="background-color:{{ section.settings.bg_color }}">
  <div class="container">

    {%- capture image -%}
      {%- if section.settings.image -%}
        <div class="cover-image-panel" style="background-image:url('{{ section.settings.image | img_url: 'master' }}')"​​​​​​​>
      {%- else -%}
        <div class="cover-image-panel" style="background-image:url('https://cdn.shopify.com/s/files/1/0533/2089/files/placeholder-images-image_large.png?format=jpg&quality=90&v=1530129081')"​​​​​​​>
      {%- endif -%}
      </div>
    {%- endcapture -%}

    {%- capture text -%}
     {%- if section.settings.img_position == 'left' -%}
      <div class="content align-l">
        {%- else -%}
        <div class="content align-r">
          {%- endif -%}
          {%- if section.settings.title != blank -%}
            <h1 class="primary">{{ section.settings.title | escape }}</h1>
          {%- endif -%}

          {{ section.settings.content }}

          {% if section.settings.button_choice %}
            <a href="{{ section.settings.link }}" class="btn">{{ section.settings.button_text | escape }}</a>
          {%- endif -%}
      </div>
    {%- endcapture -%}

   
      {%- if section.settings.img_position == 'left' -%}
       <div class="photo-with-text">
        {{ image }}
        {{ text }}
      {%- else -%}
        <div class="photo-with-text right">
        {{ text }}
        {{ image }}
      {%- endif -%}
    </div>

  </div>
</section>

{% schema %}
{
  "name": "Photo with Text",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image",
      "info": "1200 x 800px .jpg recommended"
    },
    {
      "type": "select",
      "id": "img_position",
      "label": "Image position",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "left"
    },
        {
          "type": "header",
          "content": "Text"
        },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Your title"
    },
    {
      "type": "richtext",
      "id": "content",
      "label": "Text",
      "default": "<p>Use this text to share information about your brand with your customers.<br>Describe a product, share announcements, or welcome customers to your store.</p>"
    },
               {
          "type": "header",
          "content": "Button"
        },
            {
        "type": "checkbox",
        "id": "button_choice",
        "label": "Want A Button?",
        "default": true
      },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "Read More"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link",
      "default": "/collections/all"
    },
        {
          "type": "header",
          "content": "Background"
        },
         {
        "type": "color",
        "id": "bg_color",
        "label": "Background Color",
        "default": "#ffffff"
      }
  ],
    "presets": [
    {
      "category": "Image",
      "name": "Photo With Text",
      "settings": {}
    }
  ]
}
{% endschema %}

<style>
.photo-with-text{
  display:flex;
  flex-wrap:wrap;
  height:100%;
}

.cover-image-panel, .content{
  width:50%;
}


.cover-image-panel{
    background-size: cover;
    background-position-x: center;
    background-position-y: center;
    border-radius:10px;
}

@media screen and (max-width: 999px) {
.cover-image-panel, .content{
  width:100%;
}
.cover-image-panel{
  height:300px;
}

.content, .content.text-right{
  padding:0;
      padding-top: 60px;
}



</style>