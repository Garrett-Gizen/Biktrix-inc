<section class="section pa-0" data-section-id="{{ section.id }}" data-section-type="{{ section.id }}">

  <div class="ebike-header">

{% for block in section.blocks %}
{%- if block.settings.image != blank -%}
    <div class="main-banner" style="background-image:url('{{ block.settings.image | img_url: 'master' }}')"​​​​​​​ data-block-index="{{ forloop.index0 }}" {{ block.shopify_attributes }}>
        {% else %}
    <div class="main-banner" style="background-image:url('{{ 'image_bg.jpg' | asset_url }}')" data-block-index="{{ forloop.index0 }}" {{ block.shopify_attributes }}​​​​​​​>
{%- endif -%}

  <div class="container">
    <div class="content light">
      {% if template == 'index' %}
        <h1 class="primary"> {{ block.settings.title | escape }} </h1>
         {% else %}
          <h1 class="primary"> {{ block.settings.title | escape  }} </h1>
      {% endif %}
      
      <p> {{ block.settings.text | escape }} </p>
      {% if block.settings.button_choice %}
         <a href="{{ block.settings.link }}" class="btn prim-dark">{{ block.settings.button_text | escape }}</a>
      {% endif %}
     
    </div>
  </div>
</div>
{% endfor %}
</div>
</section>

{% schema %}
{
  "name": "E-Bike Header",
  "settings": [
  {
    "type": "header",
    "content": "Background"
  },
   {
  "type": "color",
  "id": "bg_color",
  "label": "Background Color",
  "default": "#ffffff"
  }
    ],
    "blocks": [
    {
      "type": "select",
      "name": "Section",
      "settings": [
      {
        "id": "title",
        "type": "text",
        "label": "Title",
        "default": "Place Title Here"
      },
      {
        "id": "text",
        "type": "text",
        "label": "Description",
        "default": "Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown."
      },
      {
          "type": "header",
          "content": "Button"
      },

      {
        "type": "checkbox",
        "id": "button_choice",
        "label": "Want A Button?",
        "default": true
      },

       {
          "type": "text",
          "id": "button_text",
          "label": "Text",
          "default": "Read More"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        },
                    {
          "type": "header",
          "content": "Background Image"
        },
        {

          "type": "image_picker",
          "id": "image",
          "label": "Select Image"
        }
    ]
  }
  ]
}
{% endschema %}


<style>        
.main-banner {
	width:100%;
	height: 675px;
	background-repeat: no-repeat;
  background-size: cover;
  position:relative;
  display: flex;
  align-items: center;
  flex-direction: row;
  background-position-y: center;
}

.main-banner::after{
    content: "";
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    background-color: rgb(0 0 0 / 0.6);
    z-index: 0;
}

.main-banner .content{
  width:41.666%;
  word-break: break-word;
}

.ebike-header::after{
    content: "flickity";
    display: none;
}

.collection-list.ebike-header{
  white-space:normal;
  margin:0!important;
}

.ebike-header .flickity-prev-next-button.next{
  right:15px;
}

.ebike-header .flickity-prev-next-button.previous{
  left:15px;
}


@media screen and (max-width: 999px) {
  .main-banner .content{
    width:100%;
  }
}

@media screen and (max-width: 640px) {
  .main-banner{
    height:auto;
    padding:20% 0;
    background-position-x: center;

  }
  .main-banner .content p, .main-banner .content h1{
    line-height:40px;
  }

  .flickity-viewport {
  transition: height 0.3s;
}

.ebike-header .flickity-prev-next-button.next,.ebike-header .flickity-prev-next-button.previous{
  display:none;
}
}
</style>